<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="itc.hoseo.soolfarm.goods.GoodsDAO">

	<insert id="addGoods" parameterType="GoodsVO">
		INSERT INTO GOODS (gd_num,gd_name,gd_kinds) VALUES(#{gdNum},#{gdName},#{gdKinds})
	</insert>


	<select id="list" parameterType="GoodsVO" resultType="GoodsVO">
		SELECT * FROM GOODS;
	</select>
	
	
	<update id="modifyGoods" parameterType="GoodsVO">
		UPDATE GOODS SET gd_name = #{gdName} WHERE gd_num = #{gdNum};
	</update>

	<delete id="deleteGoods" parameterType="GoodsVO">
		DELETE FROM GOODS WHERE gd_num = #{gdNum};
	</delete>

	<select id="getMemberCnt" parameterType="String" resultType="Integer">
		SELECT COUNT(*) FROM MEMBER WHERE ID = #{id};
	</select>

</mapper>