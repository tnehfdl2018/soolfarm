<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="itc.hoseo.soolfarm.shoppingBasket.ShoppingBasketDAO">

<insert id="addShoppingBasket" parameterType="ShoppingBasketVO">
	INSERT INTO SHOPPINGBASKET (sb_num, sb_name, sb_kinds, sb_price, sb_mu, sb_discript, sb_status) VALUES(#{sbNum}, #{sbName}, #{sbKinds}, #{sbPrice}, #{sbMu}, #{sbDiscript}, #{sbStatus})
</insert>

<update id="modifyShoppingBasket" parameterType="ShoppingBasketVO">
	UPDATE SHOPPINGBASKET SET sb_price = #{sbPrice} WHERE sb_num = #{sbNum}
</update>

<delete id="deleteShoppingBasket" parameterType="ShoppingBasketVO">
	DELETE FROM SHOPPINGBASKET WHERE sb_num = #{sbNum}
</delete>

<select id="getShoppingBasket" parameterType="ShoppingBasketVO" resultType="ShoppingBasketVO">
	SELECT * FROM SHOPPINGBASKET
	<where>
		<if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(sbName)">
			sb_Name = #{sbName}
		</if>
	</where>
</select>

</mapper>