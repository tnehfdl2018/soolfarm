<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="itc.hoseo.soolfarm.member.MemberDAO">

	<insert id="addMember" parameterType="MemberVO">
		INSERT INTO MEMBER (email,PW,NAME,TEL,ADDRESS,DATE) VALUES(#{id},#{pw},#{name},#{tel},#{address},#{joinDate})
	</insert>

	<update id="modifyMember" parameterType="MemberVO">
		UPDATE MEMBER SET pw = #{pw}, name = #{name}, tel = #{tel}, adress = #{address} WHERE num = #{num}
	</update>

	<delete id="deleteMember" parameterType="MemberVO">
		DELETE FROM MEMBER WHERE id = #{id}
	</delete>

	<select id="getMember" parameterType="MemberVO" resultType="MemberVO">
		SELETE * FROM MEMBER
	</select>
</mapper>